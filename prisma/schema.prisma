generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model td_User {
  id              String    @id @default(uuid())
  name            String    @db.VarChar(255)
  username        String    @unique @db.VarChar(255)
  password        String    @db.VarChar(255)
  role            Int       @default(2)
  createAt        DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model td_Company {
  id              String            @id @default(uuid())
  type            Int
  company         String            @db.VarChar(255)
  address         String            @db.Text
  createAt        DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  history         th_Company[]
  staff           td_CompanyStaff[]
}

model th_Company {
  id              String      @id @default(uuid())
  companyId       String      @db.VarChar(255)
  name            String      @db.VarChar(255)
  action          Int
  createAt        DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  company         td_Company  @relation(fields: [companyId], references: [id])
}

model td_CompanyStaff {
  id              String            @id @default(uuid())
  companyId       String            @db.VarChar(255)
  title           Int
  name            String            @db.VarChar(255)
  createAt        DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  company         td_Company        @relation(fields: [companyId], references: [id])
  staff           th_CompanyStaff[]
}

model th_CompanyStaff {
  id              String          @id @default(uuid())
  companyStaffId  String          @db.VarChar(255)
  name            String          @db.VarChar(255)
  action          Int
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  staff           td_CompanyStaff @relation(fields: [companyStaffId], references: [id])
}

model td_Service {
  id              String          @id @default(uuid())
  service         String          @db.VarChar(255)
  description     String          @db.VarChar(255)
  size            String          @db.VarChar(255)
  basePrice       Decimal
  specialPrice    Decimal
  quantity        Int
  measurementUnit Int
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  scope           td_ServiceScope[]
  history         th_Service[]
}

model th_Service {
  id              String          @id @default(uuid())
  serviceId       String          @db.VarChar(255)
  name            String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  service         td_Service      @relation(fields: [serviceId], references: [id])
}

model td_ServiceScope {
  id              String          @id @default(uuid())
  serviceId       String          @db.VarChar(255)
  scope           String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  service         td_Service      @relation(fields: [serviceId], references: [id])
  history         th_ServiceScope[]
}

model th_ServiceScope {
  id              String          @id @default(uuid())
  serviceScopeId  String          @db.VarChar(255)
  name            String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  serviceScope    td_ServiceScope @relation(fields: [serviceScopeId], references: [id])
}