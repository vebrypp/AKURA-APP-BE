generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model td_User {
  id                String    @id @default(uuid())
  name              String    @db.VarChar(255)
  username          String    @unique @db.VarChar(255)
  password          String    @db.VarChar(255)
  role              Int       @default(2)
  createAt          DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  quotation         td_Quotation[]
  refreshToken      td_RefreshToken[]
}

model td_RefreshToken {
  id                String    @id @default(uuid())
  token             String    @unique
  userId            String
  revoked           Boolean   @default(false)
  createAt          DateTime  @default(now())
  expiresAt         DateTime
  lastActivity      DateTime  @default(now())
  user              td_User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

model td_Company {
  id              String            @id @default(uuid())
  type            Int
  company         String            @db.VarChar(255)
  address         String            @db.Text
  createAt        DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  history         th_Company[]
  staff           td_CompanyStaff[]
}

model th_Company {
  id              String      @id @default(uuid())
  companyId       String      @db.VarChar(255)
  name            String      @db.VarChar(255)
  action          Int
  createAt        DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  company         td_Company  @relation(fields: [companyId], references: [id])
}

model td_CompanyStaff {
  id              String            @id @default(uuid())
  companyId       String            @db.VarChar(255)
  title           Int
  name            String            @db.VarChar(255)
  createAt        DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  company         td_Company        @relation(fields: [companyId], references: [id])
  staff           th_CompanyStaff[]
  quotation       td_Quotation[]
}

model th_CompanyStaff {
  id              String          @id @default(uuid())
  companyStaffId  String          @db.VarChar(255)
  name            String          @db.VarChar(255)
  action          Int
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  staff           td_CompanyStaff @relation(fields: [companyStaffId], references: [id])
}

model td_Service {
  id                  String                @id @default(uuid())
  service             String                @db.VarChar(255)
  createAt            DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  description         td_ServiceDescription[]
  quotation           td_QuotationService[]
  history             th_Service[]
}

model th_Service {
  id              String          @id @default(uuid())
  action          Int
  name            String          @db.VarChar(255)
  serviceId       String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  service         td_Service      @relation(fields: [serviceId], references: [id])
}

model td_ServiceDescription {
  id                String                @id @default(uuid())
  description       String                @db.VarChar(255)
  serviceId         String                @db.VarChar(255)
  createAt          DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
  service           td_Service            @relation(fields: [serviceId], references: [id])
  scope             td_ServiceScope[]
  items             td_ServiceDescriptionItem[]
  history           th_ServiceDescription[]
}

model th_ServiceDescription {
  id                    String                @id @default(uuid())
  action                Int
  name                  String                @db.VarChar(255)
  descriptionId         String                @db.VarChar(255)
  createAt              DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  description           td_ServiceDescription @relation(fields: [descriptionId], references:[id])
}

model td_ServiceDescriptionItem {
  id                  String                      @id @default(uuid())
  size                String                      @db.VarChar(255)
  quantity            Int
  measurementUnit     Int
  basePrice           Decimal
  specialPrice        Decimal
  descriptionId       String                      @db.VarChar(255)
  createAt            DateTime                    @default(now())
  updatedAt           DateTime                    @updatedAt
  description         td_ServiceDescription       @relation(fields: [descriptionId], references: [id])
  history             th_ServiceDescriptionItem[]
}

model th_ServiceDescriptionItem {
  id                  String                    @id @default(uuid())
  itemId              String                    @db.VarChar(255)
  action              Int
  name                String                    @db.VarChar(255)
  createAt            DateTime                  @default(now())
  updatedAt           DateTime                  @updatedAt
  item                td_ServiceDescriptionItem @relation(fields: [itemId], references: [id])
}

model td_ServiceScope {
  id                  String                @id @default(uuid())
  scope               String                @db.Text
  descriptionId       String                @db.VarChar(255)
  createAt            DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  description         td_ServiceDescription @relation(fields: [descriptionId], references: [id])
  history             th_ServiceScope[]
}

model th_ServiceScope {
  id              String          @id @default(uuid())
  action          Int
  name            String          @db.VarChar(255)
  scopeId         String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  scope           td_ServiceScope @relation(fields: [scopeId], references: [id])
}

model td_Quotation {
  id              String          @id @default(uuid())
  no              String          @db.VarChar(255)
  date            DateTime        @db.Date
  inquiryMethod   Int
  inquiryDate     DateTime        @db.Date
  subject         String          @db.VarChar(255)
  termOfPayment   String          @db.VarChar(255)
  validity        String          @db.VarChar(255)
  tax             Int
  supplyAkura     String          @db.VarChar(255)
  supplyCustomer  String          @db.VarChar(255)
  location        String          @db.VarChar(255)
  accomplished    String          @db.VarChar(255)
  deliveryReports String          @db.VarChar(255)
  staffId         String          @db.VarChar(255)
  userId          String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  staff           td_CompanyStaff @relation(fields: [staffId], references: [id])
  user            td_User         @relation(fields: [userId], references: [id])
  service         td_QuotationService[]
  history         th_Quotation[]
}

model th_Quotation {
  id              String          @id @default(uuid())
  action          Int
  name            String          @db.VarChar(255)
  quotationId     String          @db.VarChar(255)
  createAt        DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  quotation       td_Quotation    @relation(fields: [quotationId], references: [id])
}


model td_QuotationService {
  id              String        @id @default(uuid())
  serviceId       String        @db.VarChar(255)
  quotationId     String        @db.VarChar(255)
  createAt        DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  quotation       td_Quotation  @relation(fields: [quotationId], references: [id])
  service         td_Service    @relation(fields: [serviceId], references: [id])
}